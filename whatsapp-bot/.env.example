# Server
PORT=3000
BASE_URL=http://localhost:3000

# Twilio (WhatsApp)
# Get these from Twilio Console.
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Set this to your Twilio webhook signing secret (same as auth token for validation via twilio library)
# Used to validate requests when TWILIO_VALIDATE_WEBHOOKS=true
TWILIO_VALIDATE_WEBHOOKS=false

# Optional: set to "whatsapp:+14155238886" for sandbox; Twilio will send From=whatsapp:+14155238886
TWILIO_WHATSAPP_FROM=whatsapp:+14155238886

# Your business number for escalation (optional)
HUMAN_ESCALATION_NUMBER_E164=+910000000000

